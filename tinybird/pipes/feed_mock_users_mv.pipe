NODE populate_mv
SQL >

    SELECT
        event,
        name AS player_id,
        session_id,
        countIfState(type = 'score') AS scores,
        countIfState(type = 'purchase') AS purchases,
        minState(timestamp) AS start_ts,
        maxState(timestamp) AS end_ts
    FROM mock_game_events
    GROUP BY
        event,
        player_id,
        session_id

TYPE materialized
DATASOURCE mock_user_stats_mv


